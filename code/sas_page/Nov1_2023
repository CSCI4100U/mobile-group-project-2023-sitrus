class SASPage extends StatefulWidget {
  @override
  SASPageState createState() => SASPageState();
}

class SASPageState extends State<SASPage> {

  SASModel grade_model = SASModel();

  List<Accessibility> _grades = [];

  @override
  void initState() {
    super.initState();
    _refreshList(); // Initialize _grades inside initState
  }

  void _refreshList() async {
    final List<Accessibility> grades = await grade_model.getAll();
    setState(() {
      _grades = grades;
    });
  }


  String selectedGrade = "Not Available";
  List<String> gradeOptions = ["Not Available", "Deadline Extension", "Accommodated Testing", "Sign Language Interpretation (ASL)", "Extra time", "Computerized Notetaking",
  "Alternative Testing space", "Scribe"];
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Your Accommodations'),
        backgroundColor: Colors.blue,
      ),
      body: ListView.builder(
        itemCount: _grades.length,
        itemBuilder: (context, index) {
          return ListTile(
            title: Text(_grades[index].name ?? "NA"),
            subtitle: Text(_grades[index].notes ?? "NA"),
            onTap: () {
              _editGrade(context, _grades[index]);
            },
            trailing: IconButton(
              icon: Icon(Icons.delete),
              onPressed: () {
                _deleteGrade(_grades[index].id);
              },
            ),
          );
        },
      ),
      floatingActionButton: FloatingActionButton(
        onPressed: () {
          print ("Add button printed");
          _addGrade(context);
        },
        child: Icon(Icons.add),
      ),
    );
  }


//Note: Using a page bc of how long accessibility names are rip 
  Future<void> _addGrade(BuildContext context) async {
    final result = await Navigator.of(context).push(
      MaterialPageRoute<List<String>>(builder: (BuildContext context) {
        return AddAccommodation();
      }),
    );

    if (result != null) {
      // Handle the result, which contains the studentId and grade
      final studentId = result[0];
      final g = result[1];
      grade_model.insertGrade(Accessibility(name: g, notes: studentId));
      _refreshList();
      // Perform any additional logic, such as adding the new grade to the list or database
    }
  }

  Future<void> _editGrade(BuildContext context, Accessibility grade) async {
    final editedGrade = await showDialog<Accessibility>(
      context: context,
      builder: (BuildContext context) {
        final sidController = TextEditingController(text: grade.notes);
        final gradeController = TextEditingController(text: grade.name);

        return AlertDialog(
          title: Text('Edit Grade'),
          content: Column(
            mainAxisSize: MainAxisSize.min,
            children: <Widget>[
              TextField(
                controller: sidController,
                decoration: InputDecoration(labelText: 'Student ID'),
              ),
              TextField(
                controller: gradeController,
                decoration: InputDecoration(labelText: 'Grade'),
              ),
            ],
          ),
          actions: <Widget>[
            TextButton(
              child: Text('Cancel'),
              onPressed: () {
                Navigator.of(context).pop(null);
              },
            ),
            TextButton(
              child: Text('Save'),
              onPressed: () {
                final editedSid = sidController.text;
                final editedGrade = gradeController.text;

                if (editedSid.isNotEmpty && editedGrade.isNotEmpty) {
                  final updatedGrade = Accessibility(
                    id: grade.id,
                    notes: editedSid,
                    name: editedGrade,
                  );
                  Navigator.of(context).pop(updatedGrade);
                }
              },
            ),
          ],
        );
      },
    );

    if (editedGrade != null) {
      final rowsUpdated = await grade_model.updateGrade(editedGrade);

      if (rowsUpdated > 0) {
        // The update was successful, update the list of grades
        _refreshList();
      }
    }}
  Future<void> _deleteGrade(int? id) async {
    // Delete the grade from the database and get the number of rows deleted
    final rowsDeleted = await grade_model.deleteGradeById(id);

    if (rowsDeleted > 0) {
      // The deletion was successful, update the list of grades
      _refreshList();
    }
  }
}

class AddAccommodation extends StatefulWidget {
  AddAccommodation();

  @override
  AddAccommodation_State createState() => AddAccommodation_State();


}
class AddAccommodation_State extends State<AddAccommodation> {
  String selectedGrade = "Not Available";
  List<String> gradeOptions = ["Not Available", "Deadline Extension", "Accommodated Testing", "Sign Language Interpretation (ASL)", "Extra time", "Computerized Notetaking",
    "Alternative Testing space", "Scribe"];
  final studentIdController = TextEditingController();
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Add'),
      ),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          children: [

            DropdownButton<String>(
              value: selectedGrade,
              onChanged: (String? newValue) {
                setState(() {
                  selectedGrade = newValue!;
                });
              },
              items: gradeOptions.map((String grade) {
                return DropdownMenuItem<String>(
                  value: grade,
                  child: Text(grade),
                );
              }).toList(),
            ),
            TextField(
              controller: studentIdController,
              decoration: InputDecoration(labelText: 'notes'),
            ),
          ],
        ),
      ),
      floatingActionButton: FloatingActionButton(
        onPressed: () {
          String studentId = studentIdController.text;
          String g = selectedGrade;
          final newGrade = Accessibility(
            notes: studentId,
            name: g,
          );

          SASModel gradesModel=new SASModel();
          gradesModel.insertGrade(newGrade).then((newGradeId) {
            if (newGradeId != null) {
              //Navigator.of(context).pop(newGrade);
              Navigator.of(context).push(
                MaterialPageRoute<List<String>>(builder: (BuildContext context) {
                  return SASPage();
                }),
              );
            }
          });
        },
        child: Icon(Icons.save),
      ),
    );
  }
}

//-----------------------------------------------------------------
class DBUtils{
  static Future init() async{
    late Database db;
    //set up the database
    final databasePath = await getDatabasesPath();
    final path = join(databasePath, 'accessibility.db');

    // Open the database
    db = await openDatabase(path, version: 1, onCreate: (Database db, int version) {
      // Create the 'grades' table if it doesn't exist
      db.execute('''
        CREATE TABLE accessibility (
          id INTEGER PRIMARY KEY,
          name TEXT,
          notes TEXT
        )
      ''');
    });


    return db;
  }
}
